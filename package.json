    "ts-node": "^8.1.0",
    "typeorm": "^0.2.17",
    "typescript": "^3.4.5"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "ts-node-dev": "^1.0.0-pre.39"
  }
